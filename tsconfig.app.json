{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "experimentalDecorators": true,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "vdi-class": ["./src/app/shared/vdi-class/index.ts"],
            "modal-class": ["./src/app/shared/modal-class/index.ts"],
            "shared/*": ["./src/app/shared/*"]
        }
    }
}
